@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

    <table class="table table-bordered table-striped">
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Count</th>
            <th>Controls</th>
        </tr>


        @for (int i = 0; i < Model.Rows.Count; i++)
        {
    <tr>
        <td>@Model.Rows[i][1]</td>
        <td>@Model.Rows[i][2]</td>
        <td>@Model.Rows[i][3]</td>
        
        <td>
            <a href="@Url.Action("Edit","Product",new { @id=@Model.Rows[i][0]})" class="btn btn-default btn-success">Edit</a>
            <a href="@Url.Action("Delete","Product",new { @id=@Model.Rows[i][0]})" class="btn btn-default btn-danger">Delete</a>
        </td>
    </tr>
        }
    </table>

<a href="@Url.Action("Create","Product")" class="btn btn-default btn-primary">add product</a>

